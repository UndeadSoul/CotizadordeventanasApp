<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.clients.ClientDataFragment">

    <TextView
        android:id="@+id/text_client_data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Client Details -->
    <TextView
        android:id="@+id/label_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nombre:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_client_data_title" />

    <TextView
        android:id="@+id/text_client_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Nombre Apellido"
        app:layout_constraintStart_toEndOf="@+id/label_client_name"
        app:layout_constraintTop_toTopOf="@+id/label_client_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_client_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Teléfono:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_client_name" />

    <TextView
        android:id="@+id/text_client_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="+56 9 1234 5678"
        app:layout_constraintStart_toEndOf="@+id/label_client_phone"
        app:layout_constraintTop_toTopOf="@+id/label_client_phone"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/label_client_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dirección:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_client_phone" />

    <TextView
        android:id="@+id/text_client_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Calle Falsa 123, Springfield"
        app:layout_constraintStart_toEndOf="@+id/label_client_address"
        app:layout_constraintTop_toTopOf="@+id/label_client_address"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Projects List -->
    <TextView
        android:id="@+id/text_projects_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Proyectos Asociados"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_client_address" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_client_projects"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/list_border"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_projects_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/project_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>