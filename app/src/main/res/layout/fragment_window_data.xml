<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.windows.WindowDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_window_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de la Ventana"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Basic Info -->
        <TextView
            android:id="@+id/label_window_dimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dimensiones:"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_window_details" />

        <TextView
            android:id="@+id/value_window_dimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/label_window_dimensions"
            app:layout_constraintTop_toTopOf="@+id/label_window_dimensions"
            tools:text="150cm x 120cm" />

        <TextView
            android:id="@+id/label_window_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_window_dimensions" />

        <TextView
            android:id="@+id/value_window_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/label_window_type"
            app:layout_constraintTop_toTopOf="@+id/label_window_type"
            tools:text="Corredera Linea 20" />

        <!-- Aluminum Color -->
        <TextView
            android:id="@+id/label_aluminum_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Aluminio:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_window_type" />

        <TextView
            android:id="@+id/value_aluminum_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/label_aluminum_color"
            app:layout_constraintTop_toTopOf="@+id/label_aluminum_color"
            tools:text="Blanco" />

        <!-- Crystal Type -->
        <TextView
            android:id="@+id/label_crystal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo Vidrio:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_aluminum_color" />

        <TextView
            android:id="@+id/value_crystal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/label_crystal_type"
            app:layout_constraintTop_toTopOf="@+id/label_crystal_type"
            tools:text="Incoloro 4mm" />

        <TextView
            android:id="@+id/label_window_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_crystal_type" />

        <TextView
            android:id="@+id/value_window_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/label_window_price"
            app:layout_constraintTop_toTopOf="@+id/label_window_price"
            tools:text="$ 120.000" />

        <!-- Status Checkboxes -->
        <CheckBox
            android:id="@+id/checkbox_material_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material Cortado"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_window_price"/>

        <CheckBox
            android:id="@+id/checkbox_glass_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vidrio Cortado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_material_cut"/>

        <!-- Cutting Sheet Section -->
        <TextView
            android:id="@+id/title_cutting_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoja de Corte"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_glass_cut" />

        <TextView
            android:id="@+id/value_cutting_sheet_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace"
            android:background="@drawable/list_border"
            android:padding="12dp"
            tools:text="Riel Superior: 150cm (1 unidad)\nBatiente: 116.6cm (2 unidades)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_cutting_sheet" />

        <!-- Glass Size Section -->
        <TextView
            android:id="@+id/title_glass_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TamaÃ±o de Vidrio"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/value_cutting_sheet_details" />

        <TextView
            android:id="@+id/value_glass_size_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace"
            android:background="@drawable/list_border"
            android:padding="12dp"
            tools:text="76.5cm x 115.5cm (2 unidades)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_glass_size" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>